{
  "name": "popquiz",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main/main.js",
  "scripts": {
    "dev": "npx -y vite@6.3.5",
    "start": "cross-env VITE_DEV_SERVER_URL=http://localhost:3001 electron .",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:3000 && cross-env VITE_DEV_SERVER_URL=http://localhost:3000 nodemon --watch electron --delay 500ms --exec \"electron .\"",
    "dev:browser": "vite",
    "dev:player": "cd src-player && npm run dev",
    "build": "vite build",
    "build:renderer": "vite build",
    "build:player": "cd src-player && npm run build",
    "build:exe": "npm run build:renderer && npm run build:player && electron-builder --win portable --publish never",
    "watch:exe": "chokidar \"src/**/*\" \"src-player/src/**/*\" \"electron/**/*\" \"vite.config.ts\" \"package.json\" -c \"npm run build:exe\" --debounce 2000",
    "rebuild": "npm run build:exe",
    "dev:builder": "npm run dev && npm run rebuild"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-aspect-ratio": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-context-menu": "^2.2.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-hover-card": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "*",
    "cmdk": "^1.1.1",
    "electron-log": "^5.4.3",
    "embla-carousel-react": "^8.6.0",
    "express": "^5.1.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.487.0",
    "motion": "*",
    "next-themes": "^0.4.6",
    "re-resizable": "*",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.55.0",
    "react-resizable-panels": "^2.1.7",
    "recharts": "^2.15.2",
    "sonner": "^2.0.3",
    "tailwind-merge": "*",
    "vaul": "^1.1.2",
    "ws": "^8.18.3",
    "xmldom": "^0.6.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^38.3.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.16",
    "vite": "^6.3.5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.reeceyboin.popquiz",
    "productName": "PopQuiz",
    "copyright": "Copyright Â© 2025 Reece N",
    "directories": {
      "buildResources": "build",
      "output": "."
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "dist-player/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "PopQuiz.exe",
      "certificateFile": "${env.WIN_CSC_KEY}",
      "certificatePassword": "${env.WIN_CSC_KEY_PASSWORD}",
      "signingHashAlgorithms": [
        "sha256"
      ]
    }
  },
  "description": "This is a code bundle for Quiz 5 - Reece - Ready. The original project is available at https://www.figma.com/design/ZLJookmFmhZlO3WJIT8zDx/Quiz-5---Reece---Ready.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ReeceyBoiN/d-quiz.git"
  },
